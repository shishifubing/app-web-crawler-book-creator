{
    "manifest_version": 2,
    "name": "Web-novel scraper",
    "version": "0.0",
    "description": "scrapes web-novels and turns them into ePub books",
    "icons": {
        "48": "icons/black-square48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "file:///*"
            ],
            "js": [
                "Main.js"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "book-creator@example.com"
        }
    }
}